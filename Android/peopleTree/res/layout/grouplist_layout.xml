<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

  <RelativeLayout
  	    android:id="@+id/naviTextLayout"
  	    android:layout_width="match_parent"
  	    android:layout_height="30dp"
  	    android:background="@color/blue_pressed" >
	  	<TextView
	  	    android:id="@+id/naviText"
	  	    android:layout_width="match_parent"
	  	    android:layout_height="match_parent"
	  	    android:background="@drawable/myborder3"
	  	    android:text=""
	  	    android:textSize="12sp" />
	</RelativeLayout>
	<!-- 
  	<RelativeLayout
  	    android:id="@+id/differLine1"
  	    android:layout_width="match_parent"
  	    android:layout_height="5dp"
  	    android:layout_below="@+id/naviTextLayout"
  	    android:background="@color/blue_normal" >

	</RelativeLayout>
	 -->
       
    <RelativeLayout
        android:id="@+id/groupParent_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/naviTextLayout"
        >
	
	</RelativeLayout>

    <RelativeLayout
            android:id="@+id/differLine2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/groupParent_layout"
            android:background="@color/blue_pressed" >
	
	</RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/groupcur_layout"
	    android:layout_width="match_parent"
	    android:layout_height="60dp" 
	    android:layout_below="@+id/differLine2" 
	  >
	
	</RelativeLayout>


    <ListView
        android:id="@+id/groupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/groupcur_layout" 
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
         >
    </ListView>
    
   <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" 
        android:padding="5dip">
   
     <ImageButton
         android:id="@+id/imgbtn_childadder"
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="8dp"
         android:layout_marginRight="16dp"
         android:background="@drawable/add_btn_selector"
         android:src="@android:drawable/ic_input_add" />
	</RelativeLayout>
     
   
     <ImageView
         android:id="@+id/grouplist_mymenu"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:background="@drawable/info_btn_selector"
         android:src="@drawable/test1" />
    
</RelativeLayout>