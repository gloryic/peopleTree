<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchUserItem_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="vertical" >

    <!-- android:orientation="horizontal" -->

    <TextView
        android:id="@+id/searchUserItem_txtv_id"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:text="ID: id" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/searchUserItem_txtv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="이름:이름" />

        <TextView
            android:id="@+id/searchUserItem_txtv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tel: 전_화_번_호" />

        <Button
            android:id="@+id/searchUserItem_btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>