<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ssm.peopleTree.MainActivity" >

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    
    <Button
        android:id="@+id/btn_simple_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="act__simple_request__btn_request" >
    </Button>

    <TextView
        android:id="@+id/locationTextview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_simple_request"
        android:layout_below="@+id/btn_simple_request"
        android:layout_marginTop="40dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/locationTextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationTextview1"
        android:layout_alignRight="@+id/locationTextview1"
        android:layout_below="@+id/locationTextview1"
        android:text="TextView" />

</RelativeLayout>
