<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/groupParent"
    android:layout_width="match_parent"
    android:layout_height="80dp" 
    android:background="@drawable/glist_selector">


	    <ImageButton
	        android:id="@+id/parent_btn"
	        style="@style/AppBaseTheme"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
        android:background="@drawable/info_btn_selector"
        android:src="@android:drawable/ic_dialog_info"
	        />
	
	    <ImageView
	        android:id="@+id/parent_img"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="12dp"
	        android:src="@android:drawable/ic_menu_myplaces" />
	
	    <TextView
	        android:id="@+id/parent_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/parent_img"
	        android:layout_centerVertical="true"
	        android:textSize="16sp" />
	
	    <TextView
	        android:id="@+id/parent_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/parent_btn"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"/>
	
</RelativeLayout>
