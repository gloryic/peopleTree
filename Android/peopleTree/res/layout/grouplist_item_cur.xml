<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp">
    

	<RelativeLayout
	    android:id="@+id/groupCur"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:minHeight="60dp"
	    android:background="@drawable/list_item_selector" >
	    
		<ImageView
	        android:layout_width="@dimen/cur_left_padding"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="@color/white"/>
	    
	    <ImageView
	        android:id="@+id/grouplist_cur_img"
	        android:layout_width="30dp"
	        android:layout_height="60dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/cur_left_padding"
	        android:background="@drawable/list_item_pressed" />
	    
	     <TextView
	        android:id="@+id/grouplist_cur_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/grouplist_cur_img"
	        android:layout_marginLeft="10dp"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical"
	        android:text="test"
	        android:textColor="@color/white"
	        android:textSize="@dimen/group_item_name_size" />
	     
	    <TextView
	        android:id="@+id/grouplist_cur_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/grouplist_cur_btn"
	        android:layout_marginRight="4dp"
	        android:layout_centerVertical="true"
	        android:gravity="right|center_vertical"
	        android:textSize="@dimen/group_item_number_size"
	        android:textColor="@color/white"/>
	
	    <ImageButton
	        android:id="@+id/grouplist_cur_btn"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/more_btn_selector" />
		
	</RelativeLayout>
</RelativeLayout>
