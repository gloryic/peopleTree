<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <RelativeLayout
        android:id="@+id/groupParent"
	    android:layout_width="match_parent"
	    android:layout_height="80dp" 
	    android:layout_alignParentTop="true"
	    android:background="#FFCCAA">
	
	    <ImageButton
	        android:id="@+id/parent_btn"
	        style="@style/AppBaseTheme"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="6dp"
	        android:src="@android:drawable/ic_menu_info_details"
	        android:background="#00000000"/>
	
	    <ImageView
	        android:id="@+id/parent_img"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="12dp"
	        android:src="@android:drawable/ic_menu_myplaces" />
	
	    <TextView
	        android:id="@+id/parent_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/parent_img"
	        android:layout_centerVertical="true"
	        android:textSize="16sp" />
	
	    <TextView
	        android:id="@+id/parent_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/parent_btn"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"/>	
	</RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/groupMe"
	    android:layout_width="match_parent"
	    android:layout_height="80dp" 
	    android:layout_below="@+id/groupParent" 
	    android:background="#FFFFAA">
	
	    <ImageButton
	        android:id="@+id/my_btn"
	        style="@style/AppBaseTheme"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="6dp"
	        android:src="@android:drawable/ic_menu_info_details"
	        android:background="#00000000"/>
	
	    <ImageView
	        android:id="@+id/my_img"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="32dp"
	        android:src="@android:drawable/ic_menu_myplaces" />
	
	    <TextView
	        android:id="@+id/my_num"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/my_img"
	        android:layout_centerVertical="true"
	        android:textSize="16sp" />
	
	    <TextView
	        android:id="@+id/my_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/my_btn"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"/>
	
	</RelativeLayout>

    <ListView
        android:id="@+id/groupList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/groupMe" 
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </ListView>
    
</RelativeLayout>